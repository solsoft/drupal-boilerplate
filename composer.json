{
  "name": "solsoft/drupal-composer-skeleton",
  "description": "Drupal Composer Skeleton",
  "keywords": [ "drupal", "composer", "skeleton" ],
  "homepage": "http://sol-soft.org/",
  "support": {
    "source": "https://github.com/solsoft/drupal-composer-skeleton",
    "docs": "https://github.com/solsoft/drupal-composer-skeleton/wiki",
    "wiki": "https://github.com/solsoft/drupal-composer-skeleton/wiki",
    "issues": "https://github.com/solsoft/drupal-composer-skeleton/issues",
    "email": "info@sol-soft.org"
  },
  "type": "project",
  "license": [
    "GPL-3.0+"
  ],
  "authors": [
    {
      "name": "Lu√≠s Pedro Algarvio",
      "email": "lp.algarvio@gmail.com",
      "homepage": "http://lp.algarvio.org",
      "role": "DevOps"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "vendor-dir": "vendor",
    "component-dir": "web/libraries",
    "preferred-install": "dist",
    "secure-http": false,
    "github-protocols": [
      "https", "git", "ssh"
    ]
  },
  "extra": {
    "patches-file": "composer.patches.json",
    "merge-plugin": {
      "require": [
        "composer.local.json"
      ],
      "include": [
        "web/core/composer.json",
        "web/profiles/custom/*/composer.json",
        "web/modules/custom/*/composer.json",
        "web/modules/exports/composer.json",
        "web/modules/exports/*/composer.json",
        "web/modules/exports/*/*/composer.json",
        "web/modules/exports/*/*/*/composer.json",
        "web/themes/custom/*/composer.json"
      ],
      "recurse": false,
      "replace": false,
      "merge-dev": true,
      "merge-extra": true
    },
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/profiles/contrib/{$name}": ["type:drupal-profile"],
      "web/modules/contrib/{$name}": ["type:drupal-module"],
      "web/modules/custom/{$name}": ["type:drupal-custom-module"],
      "web/themes/contrib/{$name}": ["type:drupal-theme"],
      "web/themes/custom/{$name}": ["type:drupal-custom-theme"],
      "web/libraries/{$name}": ["type:drupal-library"],
      "drush/contrib/{$name}": ["type:drupal-drush"]
    },
    "preserve-paths": [
      "web/profiles/contrib",
      "web/profiles/custom",
      "web/modules/contrib",
      "web/modules/custom",
      "web/modules/exports",
      "web/themes/contrib",
      "web/themes/custom",
      "web/libraries",
      "drush/contrib",
      "web/sites/*/*settings*.php",
      "web/sites/*/*settings*.yml",
      "web/sites/*/files",
      "web/sites/*/public",
      "web/sites/*/private",
      "web/sites/*/files-public",
      "web/sites/*/files-private"
    ],
    "drupal-scaffold": {
      "source": "https://ftp.drupal.org/files/projects/drupal-{version}.tar.gz",
      "excludes": [
        "autoload.php",
        "vendor",
        "drush"
      ],
      "includes": [
        ".gitkeep",
        "composer.json",
        "composer.lock",
        "example.gitignore",
        "LICENSE.txt",
        "README.txt",
        "core",
        "profiles",
        "modules",
        "themes"
      ],
      "omit-defaults": false
    }
  },
  "scripts": {
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "pre-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "pre-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "post-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
      "find web/ -type d | grep .git | xargs rm -rf",
      "find vendor/ -type d | grep .git | xargs rm -rf"
    ],
    "post-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
      "find web/ -type d | grep .git | xargs rm -rf",
      "find vendor/ -type d | grep .git | xargs rm -rf"
    ]
  },
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "repositories": {
    "composer": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  },
  "conflict": {
    "drupal/core": "7.*",
    "drupal/drupal": "7.*"
  },
  "require": {
    "cweagans/composer-patches": "^1.6",
    "wikimedia/composer-merge-plugin": "^1.3",
    "composer/installers": "^1.2",
    "robloach/component-installer": "^0.2",
    "derhasi/composer-preserve-paths": "^0.1",
    "drupal-composer/drupal-scaffold": "^2.2",
    "drupal/core": "8.1.*@stable",
    "zendframework/zend-hydrator": "~1.0"
  },
  "require-dev": {
    "drush/drush": "^8.1",
    "drupal/console": "^1.0-rc16"
  },
  "require-disabled": {
  }
}
